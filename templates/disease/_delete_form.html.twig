{% extends 'base-back.html.twig' %}
{% block body %}

<form method="post" action="{{ path('disease_delete', {'id': disease.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ disease.id) }}">
    <button type="submit" class="btn btn-primary">Delete</button>
</form>

{% endblock %}